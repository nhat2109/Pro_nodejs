header.header
    .container-fluid 
        .row.align-items-center 
            .col-3
                .inner-logo
                    a(href=`${prefixAdmin}/dashboard`) ADMIN
            .col-9
                .div(class="text-right")
                    if user
                        a(
                            href=`${prefixAdmin}/my-account`
                            class="btn btn-primary btn-sm mr-2"
                        ) #{user.fullName}
                        a(
                            href=`${prefixAdmin}/auth/logout`
                            class="btn btn-danger btn-sm"
                        ) Đăng xuất
                    else
                        a(
                            href=`${prefixAdmin}/auth/login`
                            class="btn btn-primary btn-sm"
                        ) Đăng nhập
