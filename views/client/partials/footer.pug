doctype html  
html  
    head  
        title Footer Example  
        style.  
            footer {  
                background-color: #f5f5f5; /* Màu nền cho footer */  
                padding: 20px;  
                font-family: Arial, sans-serif;  
            }  

            .footer-container {  
                display: flex; /* Sử dụng flexbox để sắp xếp thành 3 cột */  
                justify-content: space-between; /* Căn giữa các cột */  
                max-width: 1200px; /* Đặt chiều rộng tối đa */  
                margin: 0 auto; /* Căn giữa footer */  
            }  

            .company-info, .about-us, .customer-support, .social-media {  
                flex: 1; /* Tất cả các cột có cùng chiều rộng */  
                margin: 0 10px; /* Khoảng cách giữa các cột */  
            }  

            h2, h3 {  
                font-size: 1.5em; /* Kích thước tiêu đề */  
                color: #333; /* Màu chữ */  
            }  

            h3 {  
                margin-top: 15px; /* Khoảng cách trên cho tiêu đề phụ */  
            }  

            p {  
                margin: 5px 0; /* Khoảng cách giữa các đoạn văn */  
            }  

            ul {  
                list-style-type: none; /* Bỏ bỏ điểm đầu danh sách */  
                padding: 0; /* Bỏ Padding */  
            }  

            ul li {  
                margin: 5px 0; /* Khoảng cách giữa các mục trong danh sách */  
            }  

            ul li a {  
                color: #0066cc; /* Màu liên kết */  
                text-decoration: none; /* Bỏ gạch chân */  
                transition: color 0.3s ease; /* Hiệu ứng chuyển màu */  
            }  

            ul li a:hover {  
                color: #ff6600; /* Màu khi hover */  
            }  

            .social-media a {  
                display: inline-block; /* Đặt liên kết thành dạng khối */  
                margin-right: 10px; /* Khoảng cách giữa các liên kết mạng xã hội */  
            }  

            .footer-bottom {  
                text-align: center; /* Căn giữa nội dung */  
                margin-top: 20px; /* Khoảng cách trên cho footer bottom */  
                font-size: 0.9em; /* Kích thước chữ nhỏ hơn */  
                color: #777; /* Màu chữ nhạt */  
            }  
