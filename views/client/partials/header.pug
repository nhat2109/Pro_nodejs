include ../mixins/sub-menu.pug
header.header
    .container
        .row.align-items.center
            .col-3
                .inner-logo
                    a(href="/")
                        img(src="/images/logo.png", alt="logo" width="60px" height="50px")
            .col-9
                .inner-menu
                    ul
                        li
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            -const pathProduct = "/products";
                            a(href=pathProduct) Danh mục phẩm
                                +sub-menu(layoutProductCategory, pathProduct)