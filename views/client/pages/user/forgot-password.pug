//- kế thừa header và footer của layout/default.pug
extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)
    .container.my-5 
        .row.justify-content-center 
            .col-8
                h3.text-center Lấy lại mật khẩu  
                form(action="/user/password/forgot" method="post")  
                    div.form-group  
                        label(for="email") Email  
                        input#email.form-control(type="email" name="email" required)  
                    div.form-group  
                        button.btn.btn-primary.btn-block(type="submit") Gửi mã xác nhận
                